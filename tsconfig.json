{
  "compilerOptions": {
        "typeRoots": ["./node_modules/@types"],

    "target": "ES2021",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      // "src/*": ["./src/*"],
      "@lib":["./src/lib"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "test"],
  "include": ["src"]
}
